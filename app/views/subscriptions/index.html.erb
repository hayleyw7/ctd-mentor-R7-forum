<h1>Subscriptions</h1>

<table>
  <thead>
    <tr>
      <th>Forum</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subscriptions.each do |subscription| %>
      <tr>
        <td><%= subscription.forum.forum_name %></td>
        <td><%= subscription.priority %></td>
        <td><%= link_to 'Show', [subscription.forum, subscription] %></td>
        <td><%= link_to 'Edit', edit_forum_subscription_path(subscription.forum, subscription) %></td>
        <td><%= link_to 'Destroy', [subscription.forum, subscription], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
